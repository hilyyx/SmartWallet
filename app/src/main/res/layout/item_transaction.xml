<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    android:backgroundTint="@color/brand_card_bg"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Верхняя строка: дата и сумма -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/textDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="20.10.2025 19:23"
                android:textSize="14sp"
                android:textColor="@color/brand_text_secondary" />

            <TextView
                android:id="@+id/textAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000.00 ₽"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/brand_text_primary" />

        </LinearLayout>

        <!-- Средняя строка: категория и карта -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/textCategory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Еда"
                android:textSize="14sp"
                android:textColor="@color/brand_text_primary" />

            <TextView
                android:id="@+id/textCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Карта #1"
                android:textSize="12sp"
                android:textColor="@color/brand_text_secondary" />

        </LinearLayout>

        <!-- Нижняя строка: кэшбэк -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Кэшбэк:"
                android:textSize="12sp"
                android:textColor="@color/brand_text_secondary" />

            <TextView
                android:id="@+id/textCashback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50.00 ₽"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/brand_primary" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
